     <FUNCNAME>Z_FM_AMADEUS_FLIGHT_INFO_CALL</FUNCNAME>
     <SHORT_TEXT>Fetch Flights Using Python API (AMADEUS)</SHORT_TEXT>
     <IMPORT>
      <RSIMP>
       <PARAMETER>IV_ORIGIN</PARAMETER>
       <REFERENCE>X</REFERENCE>
       <TYP>ZPP_SPFLI-CITYFROM</TYP>
      </RSIMP>
      <RSIMP>
       <PARAMETER>IV_DEST</PARAMETER>
       <REFERENCE>X</REFERENCE>
       <TYP>ZPP_SPFLI-CITYTO</TYP>
      </RSIMP>
