       <STEXT>Natural number</STEXT>
      </RSFDO>
      <RSFDO>
       <PARAMETER>EV_ERROR</PARAMETER>
       <KIND>P</KIND>
      </RSFDO>
      <RSFDO>
       <PARAMETER>EV_TT_FLIGHTS</PARAMETER>
       <KIND>P</KIND>
       <STEXT>Flight Information Table Type</STEXT>
      </RSFDO>
