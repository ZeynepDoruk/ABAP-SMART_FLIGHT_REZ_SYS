      </RSIMP>
     </IMPORT>
     <EXPORT>
      <RSEXP>
       <PARAMETER>EV_ERROR</PARAMETER>
       <REFERENCE>X</REFERENCE>
       <TYP>STRING</TYP>
      </RSEXP>
      <RSEXP>
       <PARAMETER>EV_TT_FLIGHTS</PARAMETER>
       <REFERENCE>X</REFERENCE>
       <TYP>ZTT_FLIGHT_DATA</TYP>
      </RSEXP>
     </EXPORT>
     <DOCUMENTATION>
      <RSFDO>
       <PARAMETER>IV_ORIGIN</PARAMETER>
